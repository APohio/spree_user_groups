<div data-hook="admin_user_group_form_fields" class="row">
  <div data-hook="admin_user_group_form_name_field" class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div data-hook="admin_user_group_form_name_field" class="col-md-6">
    <%= f.field_container :minimum_order, class: ['form-group'] do %>
      <%= f.label :minimum_order, Spree.t(:minimum_order) %> <span class="required">*</span>
      <%= f.text_field :minimum_order, :class => 'form-control' %>
      <%= f.error_message_on :minimum_order %>
    <% end %>
  </div>
  <div class="col-md-12">
    <div data-hook="admin_user_group_form_calculator_fields" class="col-md-6">
      <%= render :partial => 'spree/admin/shared/calculator_fields', :locals => { :f => f } %>
    </div>
  </div>
</div>
